<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xxx">
	<insert id="insertStu">
		insert into student(tname,age) values(#{name},#{age})
	</insert>
	
	<delete id="deleteById">
		delete from student where tid = #{id}
	</delete>
	
	<update id="updateStudent">
		update student set tname = #{name},age = #{age} where tid = #{id}
	</update>
	
	<select id="selectAllStudents" resultType="Student">
		select tid id,tname name,age from student 
	</select>
	
	<select id="selectStudentById" resultType="Student">
		select tid id,tname name,age from student where tid = #{id}
	</select>
  
</mapper>