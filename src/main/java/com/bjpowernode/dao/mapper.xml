<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xxx">
	<insert id="insertStu">
		insert into student(tname,age) values(#{name},#{age})
	</insert>
	
	<delete id="deleteById">
		delete from student where tid = #{id}
	</delete>
	
	<update id="updateStudent">
		update student set tname = #{name},age = #{age} where tid = #{id}
	</update>
	
	<resultMap type="Student" id="studentMap">
		<id  column="tid" property="id" />
		<result column="tname" property="name"/>
	
	</resultMap>
	
	<select id="selectAllStudents" resultMap="studentMap">
		select tid ,tname ,age from student 
	</select>
	
	<select id="selectStudentById" resultMap="studentMap">
		select tid ,tname ,age from student where tid = #{id}
	</select>
  
</mapper>